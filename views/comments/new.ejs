<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center; margin: 30px">Add a New Comment to <%= campground.name %></h1>
    <div style="width: 30%; margin: 0 auto;">
    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>    

        <div class="form-group">
            <button class="btn btn-outline-success btn-lg btn-block" type="submit">Submit!</button>
        </div>
             
    </form>
    <a class="btn btn-outline-warning btn-block" href="/campgrounds/<%= campground._id %>">Go Back</a>  
    </div>
</div>

<% include ../partials/footer %>