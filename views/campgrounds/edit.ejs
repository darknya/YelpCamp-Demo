<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center; margin: 30px">Create a New CampGround</h1>
    <div style="width: 30%; margin: 0 auto;">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="campground[name]" placeholder="camp name" value="<%= campground.name%>">
        </div>
        <div class="form-group">
            <input class="form-control" type="number" name="campground[price]" placeholder="price" value="<%= campground.price%>" min="0.01" step="0.01">
        </div>      
        <div class="form-group">   
            <input class="form-control" type="text" name="campground[image]" placeholder="camp image url" value="<%= campground.image%>">
        </div>
        <div class="form-group">   
            <input class="form-control" type="text" name="campground[description]" placeholder="camp description" value="<%= campground.description%>">
        </div>
        <div class="form-group">
            <button class="btn btn-outline-success btn-lg btn-block" type="submit">UpData!</button>
        </div>
             
    </form>
    <a class="btn btn-outline-warning btn-block" href="/campgrounds">Go Back</a>  
    </div>
</div>

<% include ../partials/footer %>